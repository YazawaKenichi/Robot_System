            "z の係数 = ",
            "右辺\n定数項 = ",
            "3つめの等式\n左辺\nx の係数 = ",
            "y の係数 = ",
            "z の係数 = ",
            "右辺\n定数項 = "
            ]
    print(strings[i])

def numarray(charctor):
    while(charctor != "\0"):
        if(charactor == '+' 
                || charactor == '-'
                || charactor == '*'
                || charactor == '/'
                || charactor == '.'):
        else:
            if(charactor != str.isdigit(charactor)):
                return False
        return True

def tri(function, inputnum):
    if(function == 's' || function == 'S'):
        return math.sin(inputnum * math.pi / 180)
    if(function == 'c' || function == 'C'):
        return math.cos(inputnum * math.pi / 180)
    if(function == 't' || function == 'T'):
        return math.tan(inputnum * math.pi / 180)
    printyellow("そのような関数またはコマンドはありません。ヘルプは '?' で表示できます。")

