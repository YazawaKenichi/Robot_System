    print(CLS)

def printred(str string):
    print(RED)
    print("*** ERROR ***")
    print(string)
    print(EX)

def printyellow(str string):
    print(YEL)
    print("*** WARNING ***")
    print(string)
    print(EX)

def printcyan(str string):
    print(CYAN)
###    print("*** COLLECT ***")
    print(string)
    print(EX)

def printhgreen(str string):
    print(GREEN)
###    print("*** DEBUG ***")
    print(string)
    print(EX)

