def printhelp(Help place):
    if(place == Help.ARITHMETIC):
        print("四則演算のヘルプ")
    elif(place == Help.FUNCTIONAL):
        print("関数演算のヘルプ")
    else
        printred("Program Error !")

def printk(int i):
    print("三元連立方程式を解きます")
    print("ax + by + cz = k で表される数式において、")
    strings = [
            "１つめの等式\n左辺\nx の係数 = ",
